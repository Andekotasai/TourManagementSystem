@model TourManagementSystem.Models.AdminSignIn

@{
    Layout = null;
}
<style>
    input.input-validation-error,
    select.input-validation-error {
        background-color: aliceblue;
        border: 2px solid #CD0A0A;
    }

    body {
        background-image: url("https://wallpapercave.com/wp/j9rxwNx.jpg")
    }

    .main {
        border-radius: 3px;
        width: 300px;
        height: 240px;
        vertical-align: central;
        margin: auto;
        color: aliceblue;
        text-align: center;
        margin-top: 250px;
        background-color: rgba(0,0,0,0.6);
        padding-top: 20px;
    }

    .button {
        margin-top: 8px;
    }

    .main div {
        margin-top: 8px;
    }
</style>

<body>
    @using (Html.BeginForm("SignIn", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="main">
            <h4>AdminSignIn</h4>


            <div class="form-group">
                @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                @Html.ValidationMessageFor(model => model.UserName, "", new { style = "color:red" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                @Html.ValidationMessageFor(model => model.Password, "", new { style = "color:red" })
            </div>

            <div class="form-group">
                <div class="button">
                    <input type="submit" value="SignIn" class="btn btn-default" />
                </div>
            </div>
        </div>
    }



    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
