
@{
    Layout = null;
}
<!doctype html>
<html>
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.6.0/css/fontawesome.min.css" />
    <style>
        * {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
            list-style: none;
            text-decoration: none;
            color: black;
        }

        .main-div {
            background-color: rgba(126, 134, 205, 0.16);
            padding: 15px 0px;
            width: 100%;
            height: 70px;
        }

            .main-div .logo {
                font-size: 30px;
                padding-left: 40px;
            }

            .main-div ul {
                float: right;
            }

                .main-div ul li {
                    display: inline-block;
                    margin-right: 10px;
                    padding: 7px 25px;
                }

        li.active, li:hover {
            background-color: aqua;
            transition: 0.5s;
            border-radius: 5px;
        }

        i {
            padding-right: 10px;
        }

        .main-div1 {
            width: 20%;
            /*background-color: rgba(126, 134, 205, 0.16);*/
            margin: 30px;
            list-style: none;
            float: left;
        }

            .main-div1 li {
                padding: 10px 20px;
                margin: 20px;
                border: 2px;
                border-radius: 3px;
                background-color: rgba(126, 134, 205, 0.16);
                border-radius: 5px;
            }



        td {
            column-span: all;
        }

        #size {
            font-size: 25px;
            margin: auto;
            padding-top: 5px;
        }
    </style>
    <script>
        $("document").ready(function () {
            $(".logo").click(function () {
                $(".active").css("background-color", "red");
            });
        })

    </script>

</head>
<body style="background-image: url('http://www.wns.com/Portals/0/Images/Videos/DesktopImages/709/23/T&L_ART_Flight-Path-To-Survival-Business-process_HD.jpg')">
    <div class="main-div">
        <Tittle class="logo">Tour Management System</Tittle>
        <ul>
            <li class="active"><i class="fas fa-home"></i>Home</li>
            <li><i class="fas fa-phone-alt"></i>@Html.ActionLink("ContactSupport", "Contact", "Home")</li>
            <li><i class="fas fa-comments"></i>Feedback</li>
            <li><i class="fas fa-sign-out-alt"></i>@Html.ActionLink("SignOut", "SignOut")</li>
            <li><i class="bi bi-person-circle" id="size"></i>@Session["Email"].ToString()</li>
        </ul>
    </div>
    <div class="main-div1">
        <ul>
            <li class="dash"><i class="fas fa-tachometer-alt"></i>@Html.ActionLink("Dashboard", "Dashboard", "UserBookingManage")</li>
            <li><i class="fas fa-list-alt"></i>@Html.ActionLink("TourPackages", "TourPackageDetails")</li>
            <li><i class="fas fa-tasks"></i>@Html.ActionLink("ManageBooking", "ManageBooking", "UserBookingManage")</li>
            <li><i class="fas fa-cogs"></i>Settings</li>
            <li><i class="fas fa-address-card"></i>@Html.ActionLink("About", "About", "Home")</li>
        </ul>

    </div>


</body>
</html>



